@model IEnumerable<Gummi_Bear.Model.Product>

@{
    ViewData["Title"] = "View Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="productHeader"><strong>Current Product</strong></h1>

@if (Model.Any())
{
<div class="container-fluid">
        @foreach (var listProduct in Model)
        {
            <div class="productBox">
                <h4 class="productHeader"><strong>@Html.DisplayFor(modelName => listProduct.Name)</strong></h4>
                <ul>
                    <li><strong><em>Cost:</em></strong> @Html.DisplayFor(modelCost => listProduct.Cost)</li>
                    <li><strong><em>Country Of Origin:</em></strong> @Html.DisplayFor(modelOrigin => listProduct.CountryOfOrigin)</li>
                    <li>@Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) | @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })</li>
                </ul>
            </div>
        }
</div>
}